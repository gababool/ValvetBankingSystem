<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.controller.AllCustomersController">
   <children>
      <Label layoutX="15.0" layoutY="29.0" text="All Customers" />
      <Button fx:id="goToCustomerButton" layoutX="15.0" layoutY="345.0" mnemonicParsing="false" onAction="#goToCustomer" text="Go To Customer" />
      <Button fx:id="returnToMainMenuButton" layoutX="454.0" layoutY="345.0" mnemonicParsing="false" onAction="#goToMainMenu" text="Return to Main Menu" />
      <TableView fx:id="allCustomers" layoutX="15.0" layoutY="60.0" prefHeight="273.0" prefWidth="571.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="209.0" text="Name" />
          <TableColumn fx:id="personalNumberColumn" prefWidth="150.0" text="Personal Number" />
            <TableColumn fx:id="accountColumn" prefWidth="81.0" text="Accounts" />
            <TableColumn fx:id="totalBalanceColumn" prefWidth="113.0" text="Total Balance" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TextField fx:id="searchField" layoutX="109.0" layoutY="25.0" onAction="#onEnter" prefHeight="26.0" prefWidth="411.0" promptText="Search a name or personal number..." />
      <Button fx:id="searchButton" layoutX="529.0" layoutY="25.0" mnemonicParsing="false" onAction="#searchAction" text="Search" />
   </children>
</AnchorPane>
