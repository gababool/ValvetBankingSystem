<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.controller.TransactionController">
   <children>
      <Label layoutX="40.0" layoutY="35.0" text="New Transaction">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="receiverTextField" layoutX="107.0" layoutY="136.0" prefHeight="25.0" prefWidth="335.0" promptText="Receiver Account Number" />
      <TextField fx:id="senderTextField" layoutX="107.0" layoutY="103.0" prefHeight="25.0" prefWidth="335.0" promptText="Sender Account Number" />
      <TextField fx:id="amountTextField" layoutX="107.0" layoutY="176.0" prefHeight="25.0" prefWidth="335.0" promptText="Amount" />
      <Label layoutX="46.0" layoutY="105.0" text="From:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="46.0" layoutY="138.0" text="To:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="46.0" layoutY="179.0" text="Amount:">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="makeTransactionButton" layoutX="40.0" layoutY="248.0" mnemonicParsing="false" onAction="#makeTransaction" prefHeight="30.0" prefWidth="398.0" text="Make Transaction" />
      <Button fx:id="clearAllButton" layoutX="40.0" layoutY="287.0" mnemonicParsing="false" onAction="#clearAll" prefHeight="30.0" prefWidth="398.0" text="Clear All" />
      <Button fx:id="returnButton" layoutX="40.0" layoutY="328.0" mnemonicParsing="false" onAction="#returnToLastView" prefHeight="30.0" prefWidth="398.0" text="Return" />
      <Button fx:id="switchAccountButton" layoutX="445.0" layoutY="124.0" mnemonicParsing="false" onAction="#switchAccount" rotate="90.0" text="&lt;-&gt;" />
   </children>
</AnchorPane>
